{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "jsxSingleQuote": true,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@/components/?(.*)$",
    "^@/providers/?(.*)$",
    "^@/services/?(.*)$",
    "^@/types/?(.*)$",
    "^@/icons/?(.*)$",
    "^(.*)\\.css$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
